<div id="prompts-list">
  <% @prompts.each do |prompt| %>
    <div>
      <p><strong>プロンプト:</strong> <%= prompt.content %></p>
      <p><strong>レスポンス:</strong> <%= prompt.response %></p>
    </div>
  <% end %>
</div>

<%= form_with(model: @prompt, id: 'generation-form', remote: true) do |form| %>
  <div>
    <%= form.label :content, 'プロンプト' %>
    <%= form.text_area :content %>
  </div>
  <%= form.submit '生成' %>
<% end %>

<div id="new-prompt"></div>